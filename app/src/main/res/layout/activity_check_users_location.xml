<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bck5">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="400dp"
        android:layout_height="574dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:context=".CheckUsersLocation" />

    <Button
        android:id="@+id/messageUsers"
        android:layout_width="162dp"
        android:layout_height="38dp"
        android:text="Message Users"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/updateUsers"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:text="Check/Update Users Location"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/toDatabase"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:text="Update Database Info"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:text="Log Out"
        android:textAllCaps="false" />
</LinearLayout>